{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ðŸŽ¯ Approved Sync to GitHub",
            "type": "shell",
            "command": "./scripts/approved_sync.sh",
            "args": ["${input:syncType}", "${input:commitMessage}"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸ’¾ Local Commit Only",
            "type": "shell",
            "command": "git",
            "args": ["add", ".", "&&", "git", "commit", "-m", "${input:localCommitMessage}"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        },
        {
            "label": "Sync with GitHub",
            "type": "shell", 
            "command": "git",
            "args": ["pull", "&&", "git", "push"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always"
            }
        }
    ],
    "inputs": [
        {
            "id": "syncType",
            "description": "Type of approved sync",
            "default": "stable",
            "type": "pickString",
            "options": [
                "release",
                "stable", 
                "hotfix",
                "production"
            ]
        },
        {
            "id": "commitMessage",
            "description": "Approved sync commit message",
            "default": "Update knowledge base - ready for production",
            "type": "promptString"
        },
        {
            "id": "localCommitMessage", 
            "description": "Local development commit message",
            "default": "ðŸ”§ Work in progress - local only",
            "type": "promptString"
        }
    ]
}